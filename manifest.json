{
  "name": "Google Music Remote",
  "version": "0.1",
  "description": "Exposes controls to websocket service, which can be controlled by third devices and applications.",
  "icons": {"16": "16.png", "48": "48.png", "128": "128.png"},
  "options_page": "options.html",
  "background_page": "background.html",
  "content_scripts": [
    {
      "matches": ["https://play.google.com/music/*"],
      "js": ["ctrl.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "48.png", 
    "default_title": "Google Music Remote",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "https://play.google.com/music/*",
    "http://*/*",
    "https://*/*"
  ]   
}